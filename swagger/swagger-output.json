{
  "openapi": "3.0.0",
  "info": {
    "title": "usdiary",
    "description": "usdiary API 명세서",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local development server"
    },
    {
      "url": "https://api.example.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/users/login": {
      "post": {
        "summary": "로그인",
        "description": "아이디와 비밀번호를 입력해 로그인합니다.",
        "tags": [
          "users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sign_id": {
                    "type": "string",
                    "description": "유저아이디",
                    "example": "test"
                  },
                  "password": {
                    "type": "string",
                    "description": "패스워드",
                    "example": "swuweb123"
                  }
                },
                "required": ["sign_id", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공적으로 로그인하였습니다.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "로그인 성공 메시지"
                    },
                    "token": {
                      "type": "string",
                      "description": "JWT 인증 토큰"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid sign_id or password"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/findId": {
      "post": {
        "summary": "아이디 찾기",
        "description": "사용자 이름, 이메일 및 생일을 입력하여 아이디를 찾습니다.",
        "tags": [
          "users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_name": {
                    "type": "string",
                    "description": "사용자 이름",
                    "example": "김슈니"
                  },
                  "user_email": {
                    "type": "string",
                    "format": "email",
                    "description": "사용자 이메일",
                    "example": "usdiary@example.com"
                  },
                  "user_birthday": {
                    "type": "string",
                    "format": "date",
                    "description": "사용자 생일 (YYYY-MM-DD 형식)",
                    "example": "2000-01-01"
                  }
                },
                "required": ["user_name", "user_email", "user_birthday"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "사용자의 아이디를 성공적으로 찾았습니다.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "김슈니님의 아이디입니다."
                    },
                    "sign_id": {
                      "type": "string",
                      "description": "찾은 사용자 아이디",
                      "example": "usdiary"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "사용자 정보와 일치하는 계정을 찾을 수 없습니다.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "사용자 정보와 일치하는 계정이 없습니다."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "서버 내부 오류"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/diaries/{diary_id}": {
      "get": {
        "description": "특정 일기를 가져옵니다.",
        "parameters": [
          {
            "name": "diary_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공적으로 일기를 가져왔습니다.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Diary"
                }
              }
            }
          },
          "404": {
            "description": "일기를 찾을 수 없습니다."
          },
          "default": {
            "description": "기타 오류"
          }
        }
      }
    },
    "/diaries": {
      "post": {
        "description": "새로운 일기를 생성합니다.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/DiaryCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "일기가 성공적으로 생성되었습니다.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Diary"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Diary": {
        "type": "object",
        "properties": {
          "diary_id": {
            "type": "integer",
            "format": "int64",
            "description": "일기 ID"
          },
          "user_id": {
            "type": "integer",
            "format": "int64",
            "description": "사용자 ID"
          },
          "board_id": {
            "type": "integer",
            "format": "int64",
            "description": "게시판 ID"
          },
          "diary_title": {
            "type": "string",
            "description": "일기 제목"
          },
          "diary_content": {
            "type": "string",
            "description": "일기 내용"
          },
          "access_level": {
            "type": "integer",
            "description": "접근 수준 (0: public, 1: private, 2: friend)"
          },
          "view_count": {
            "type": "integer",
            "format": "int64",
            "description": "조회 수"
          },
          "like_count": {
            "type": "integer",
            "format": "int64",
            "description": "좋아요 수"
          },
          "post_photo": {
            "type": "string",
            "description": "게시물 사진 URL"
          },
          "diary_emotion": {
            "type": "string",
            "description": "감정"
          },
          "cate_num": {
            "type": "integer",
            "format": "int64",
            "description": "카테고리 번호"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "일기 생성 시각"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "일기 수정 시각"
          }
        },
        "required": [
          "diary_id",
          "user_id",
          "board_id",
          "diary_title",
          "diary_content",
          "access_level",
          "view_count",
          "like_count"
        ]
      },
      "DiaryCreate": {
        "type": "object",
        "properties": {
          "diary_title": {
            "type": "string",
            "description": "일기 제목"
          },
          "diary_content": {
            "type": "string",
            "description": "일기 내용"
          },
          "diary_cate": {
            "type": "string",
            "description": "일기 카테고리"
          },
          "access_level": {
            "type": "integer",
            "description": "접근 수준 (0: public, 1: private, 2: friend)"
          },
          "board_id": {
            "type": "integer",
            "format": "int64",
            "description": "게시판 ID"
          },
          "diary_emotion": {
            "type": "string",
            "description": "감정"
          },
          "cate_num": {
            "type": "integer",
            "format": "int64",
            "description": "카테고리 번호"
          },
          "post_photo": {
            "type": "string",
            "format": "binary",
            "description": "게시물 사진"
          }
        },
        "required": [
          "diary_title",
          "diary_content",
          "access_level",
          "board_id"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "in": "header",
        "bearerFormat": "JWT"
      }
    }
  }
}
