<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Diary</title>
    <script>
        async function deleteDiary() {
            const diaryId = document.getElementById('diaryId').value;
            if (!diaryId) {
                alert('Please enter a Diary ID.');
                return;
            }

            try {
                const response = await fetch(`/diaries/${diaryId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();
                if (response.ok) {
                    alert(result.message);
                } else {
                    alert(result.message || 'Error deleting diary.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the diary.');
            }
        }
    </script>
</head>
<body>
    <h1>Delete Diary</h1>
    <label for="diaryId">Diary ID:</label>
    <input type="text" id="diaryId" name="diaryId" required>
    <button onclick="deleteDiary()">Delete Diary</button>
</body>
</html>
